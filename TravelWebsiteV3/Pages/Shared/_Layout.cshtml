<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TravelWebsiteV2</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TravelWebsiteV3.styles.css" asp-append-version="true"/>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="#home" class="navbar-brand">
                    <img src="Content/logo.svg" alt="TRIPSCAN Logo" class="logo" id="logo_img"/>
                    <h1 class="logo" id="logo_name">TRIPSCAN</h1>
                </a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#plan" class="rounded-button">Plan</a></li>
                <li><a href="#inspiration" class="rounded-button">Inspiration</a></li>
                <li><a href="#activities" class="rounded-button">What to Do</a></li>
                <li><a href="#contact" class="nav-link">Contact</a></li>
                <li><a href="#about" class="nav-link">About</a></li>
                <li class="theme-toggle-nav"><button id="theme-toggle" class="theme-toggle-btn" aria-label="Toggle dark mode"><span class="theme-toggle-icon" id="theme-toggle-icon">🌙</span></button></li>
            </ul>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
    </div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - TravelWebsite - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>